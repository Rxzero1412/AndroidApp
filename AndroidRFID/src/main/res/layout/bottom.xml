<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/layout_bottomR">
    <RadioGroup
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ed4255">

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:button="@null"
                android:id="@+id/btn_home"
                android:background="@drawable/homeimg"/>

            <RadioButton
                android:layout_width="50dp"
                android:button="@null"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:id="@+id/btn_zhangdan"
                android:layout_weight="1"
                android:background="@drawable/zhangdan"/>

            <RadioButton
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/btn_yonghu"
                android:layout_weight="1"
                android:background="@drawable/yonghu"/>

    </RadioGroup>



</RelativeLayout>
